<?php $__env->startSection('title'); ?>

<?php $__env->stopSection(); ?>

<?php $__env->startSection('contenu'); ?>

    <style>

        #taches{
            margin-top: 10px;
            border: solid;
            width: 350px;
            text-align: center;
            border-radius: 15px;
            position:center;
        }

     



    </style>



    <h2>Nom de la liste : " <?php echo e($project->name); ?> "</h2><br>

    <?php if( !$project->tasks->count() ): ?>
        Vous n'avez planifié aucune tâche

    <?php else: ?>
        <ul>
            <?php foreach( $project->tasks as $task ): ?>


                <!-- C'est assez spécial pour afficher ca du coup :

                 j'ouvre une form pour créer des boutons ( Form::open est une classe de laravel qui permet de créer des formes
                                  de la je crée deux boutons , et quand on clique dessus ça méne a des routes de modification / suppressions
                                    Le truc c'est qu'il faut aussi créer un submit ( sinon ca fait rien )
                                     et aussi fermer la form
                 !-->


                <div id="taches">

                <h2 style="text-decoration: underline"><?php echo e($task->name); ?></h2>

                    Description : <br><br>
                   <?php echo e($task->description); ?> <br><br>


                    Etat de la tache :
                    <?php if( $task->completed == 1): ?>


                  <div id="terminee" style="color:#128A42"> Terminée</div>
                    <?php else: ?>
                        <div style="color: #880000"> En cours</div>
                    <?php endif; ?>
<br>

                    Date d'échéance :
                    <?php echo e($task->dateEcheance); ?><br>
                    <?php echo Form::open(array('class' => 'form-inline', 'method' => 'DELETE', 'route' => array('projects.tasks.destroy', $project->slug, $task->slug))); ?>

                    <?php echo link_to_route('projects.tasks.edit', 'Modifier', array($project->slug, $task->slug), array('class' => 'btn btn-info')); ?>

                    <?php echo Form::submit('Supprimer', array('class' => 'btn btn-danger')); ?>

                    <?php echo Form::close(); ?>

                    <br>


                </div>

            <?php endforeach; ?>
        </ul>
    <?php endif; ?>
    <p><br><br>


        <?php echo link_to_route('projects.index', 'Retour aux listes de tâche',null,array('class'=>'btn btn-info') ); ?>

        <?php echo link_to_route('projects.tasks.create', 'Créer une tache', $project->slug ,array('class'=>'btn btn-success') ); ?>

    </p>

<?php $__env->stopSection(); ?>
<?php echo $__env->make('../master', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>